server {
       listen 80;

{% for jail in jails %}
       server_name {{ jail.name }};
{% endfor %}

       root /var/www/videos;

       location /hls/ {
                types {
                      application/vnd.apple.mpegurl m3u8;
                      video/mp2t ts;
                }

                add_header Access-Control-Allow-Origin "*";
                add_header Cache-Control "public, max-age=31536000, immutable";

                try_files $uri 404;
       }
}
